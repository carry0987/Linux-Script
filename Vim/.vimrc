set nu
set ai
set shiftwidth=4
set tabstop=4
set expandtab
set mouse=a
set cursorline
set hlsearch
set viminfo+=n~/.vim/viminfo
set t_Co=256
set encoding=utf8
syntax on

" Color configuration
colorscheme monokai
set bg=dark
hi LineNr cterm=bold ctermfg=DarkGrey ctermbg=NONE
hi CursorLineNr cterm=bold ctermfg=Green ctermbg=NONE
